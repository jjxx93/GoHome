<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.youtu.dao.UserDao">
    <insert id="addUser" parameterType="String">
        INSERT INTO user
        (user_name,password) VALUES
        (#{userName}, #{password})
    </insert>

    <select id="queryByUsernameAndPassword" parameterType="String" resultType="com.youtu.entity.User">
        SELECT id,user_name,user_uuid,password
        FROM user
        WHERE user_name = #{userName} AND password = #{password};
    </select>
</mapper>